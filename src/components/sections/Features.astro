---
interface Item { title: string; text: string }
interface Props { items?: Item[] }

const { items = [] } = Astro.props as Props;
---
<section class="section">
  <div class="container">
    <div class="grid">
      {items.map((it: Item) => (
        <div class="card">
          <h3 style="margin:.25rem 0 .5rem 0;">{it.title}</h3>
          <p style="color:var(--muted)">{it.text}</p>
        </div>
      ))}
    </div>
  </div>
</section>