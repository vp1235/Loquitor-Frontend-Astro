---
import Icon from './Icon.astro';
import VibeDropdown from './VibeDropdown.astro';

const { isAuthenticated = false } = Astro.props;
---

<nav class="relative z-50 px-6 lg:px-12 py-6 flex justify-between items-center backdrop-blur-md bg-slate-50/70 dark:bg-slate-900/70 border-b border-slate-200 dark:border-slate-800">
  <a href="/" class="flex items-center space-x-3">
    <span class="text-2xl font-bold tracking-tight">Loquitor</span>
  </a>

  <div class="hidden md:flex items-center space-x-6">
    <VibeDropdown />

    <a href="/#capabilities" class="text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
      Capabilities
    </a>
    <a href="/#research" class="text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
      Research
    </a>
    <a href="/#architecture" class="text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
      Architecture
    </a>

    {isAuthenticated ? (
      <a
        href="/inbox"
        class="px-6 py-2.5 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-lg hover:from-emerald-500 hover:to-teal-500 transition-all shadow-lg hover:shadow-emerald-500/25 text-white"
      >
        Go to Inbox
      </a>
    ) : (
      <a
        href="/login"
        class="px-6 py-2.5 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-lg hover:from-emerald-500 hover:to-teal-500 transition-all shadow-lg hover:shadow-emerald-500/25 text-white"
      >
        Get Started
      </a>
    )}
  </div>

  <!-- Mobile menu button -->
  <div class="md:hidden">
    <button
      id="mobile-menu-toggle"
      class="p-2 text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white"
      aria-label="Toggle menu"
    >
      <Icon name="Menu" class="w-6 h-6" size={24} />
    </button>
  </div>
</nav>

<!-- Mobile menu -->
<div id="mobile-menu" class="hidden md:hidden bg-slate-50/95 dark:bg-slate-900/95 backdrop-blur-lg border-b border-slate-200 dark:border-slate-800">
  <div class="px-6 py-4 space-y-3">
    <a href="/#capabilities" class="block py-2 text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
      Capabilities
    </a>
    <a href="/#research" class="block py-2 text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
      Research
    </a>
    <a href="/#architecture" class="block py-2 text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors">
      Architecture
    </a>
    {isAuthenticated ? (
      <a
        href="/inbox"
        class="block px-6 py-2.5 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-lg hover:from-emerald-500 hover:to-teal-500 transition-all shadow-lg text-white text-center"
      >
        Go to Inbox
      </a>
    ) : (
      <a
        href="/login"
        class="block px-6 py-2.5 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-lg hover:from-emerald-500 hover:to-teal-500 transition-all shadow-lg text-white text-center"
      >
        Get Started
      </a>
    )}
  </div>
</div>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuToggle && mobileMenu) {
    mobileMenuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
