---
import '../styles/global.css';
import LoginPageWrapper from '../components/LoginPageWrapper';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sign in to Loquitor" />
    <title>Login - Loquitor</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script is:inline>
      // Set theme before page renders to avoid flash
      const savedTheme = localStorage.getItem('loquitor-theme') || 'dark';
      if (savedTheme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-950 dark:via-slate-900 dark:to-slate-950 text-slate-900 dark:text-white transition-colors duration-300">
    <!-- Grid background -->
    <div class="fixed inset-0 opacity-10 dark:opacity-20 pointer-events-none will-change-transform">
      <div class="absolute inset-0 transform-gpu"
        style="background-image: linear-gradient(to right, #cbd5e1 1px, transparent 1px), linear-gradient(to bottom, #cbd5e1 1px, transparent 1px); background-size: 50px 50px; backface-visibility: hidden; -webkit-backface-visibility: hidden;"
      />
    </div>

    <LoginPageWrapper client:only="react" />
  </body>
</html>
