---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Icon from '../components/Icon.astro';
import { getVibeContent, consultationServices } from '../config/vibeContent';

// Default to professional vibe server-side
const defaultVibe = 'professional';
const content = getVibeContent(defaultVibe);

// Check if user is authenticated
const isAuthenticated = !!Astro.locals.user;
---

<BaseLayout title="Loquitor - AI Solutions Built for You">
  <Navigation isAuthenticated={isAuthenticated} />
  <div class="min-h-screen" id="landing-page">
    <!-- Hero Section -->
    <section class="relative z-10 px-6 lg:px-12 py-20 lg:py-32 max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <div class="inline-flex items-center space-x-2 px-4 py-2 bg-emerald-100 dark:bg-emerald-900/30 backdrop-blur rounded-full border border-emerald-300 dark:border-emerald-500/30 transition-colors duration-300">
            <Icon name={content.hero.badge.icon} class="w-4 h-4 text-emerald-600 dark:text-emerald-400" />
            <span class="text-sm text-emerald-700 dark:text-emerald-300" id="hero-badge-text">{content.hero.badge.text}</span>
          </div>

          <h1 class="text-5xl lg:text-7xl font-bold tracking-tight">
            <span class="text-slate-900 dark:text-white" id="hero-title-line1">{content.hero.title.line1}</span>
            <br />
            <span class="bg-gradient-to-r from-emerald-600 to-teal-600 dark:from-emerald-400 dark:to-teal-400 bg-clip-text text-transparent" id="hero-title-line2">
              {content.hero.title.line2}
            </span>
          </h1>

          <p class="text-xl text-slate-600 dark:text-slate-300 leading-relaxed" id="hero-subtitle">
            {content.hero.subtitle}
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <button
              data-scroll-to="capabilities"
              class="group px-8 py-4 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-xl font-semibold hover:from-emerald-500 hover:to-teal-500 transition-all shadow-xl hover:shadow-emerald-500/25 flex items-center justify-center text-white">
              <span id="hero-primary-cta">{content.hero.primaryCTA}</span>
              <Icon name="ArrowRight" class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" />
            </button>
            <button
              data-scroll-to="consultation"
              class="px-8 py-4 border border-slate-300 dark:border-slate-600 hover:border-slate-400 dark:hover:border-slate-500 rounded-xl font-semibold hover:bg-slate-100 dark:hover:bg-slate-800/50 transition-all backdrop-blur">
              <span id="hero-secondary-cta">{content.hero.secondaryCTA}</span>
            </button>
          </div>
        </div>

        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-emerald-600/20 to-teal-600/20 blur-3xl pointer-events-none"></div>
          <div class="relative bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl border border-slate-200 dark:border-slate-700 rounded-2xl p-8 shadow-2xl transition-colors duration-300">
            <div class="space-y-6" id="hero-capabilities">
              {content.capabilities.map((cap, index) => (
                <div
                  data-feature-index={index}
                  class={`feature-card flex items-center space-x-4 p-4 rounded-lg transition-all duration-500 ${
                    index === 0 ? 'active bg-slate-100 dark:bg-slate-800/50 border border-emerald-300 dark:border-emerald-500/30 shadow-lg' : 'opacity-60'
                  }`}
                >
                  <div class={`w-10 h-10 bg-gradient-to-br ${cap.gradient} rounded-lg flex items-center justify-center`}>
                    <Icon name={cap.icon} class="w-5 h-5 text-white" />
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-sm">{cap.title}</h3>
                  </div>
                  <Icon name="ChevronRight" class={`chevron w-5 h-5 text-emerald-600 dark:text-emerald-400 ${index === 0 ? '' : 'hidden'}`} />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Capabilities -->
    <section id="capabilities" class="relative z-10 px-6 lg:px-12 py-20 bg-slate-100/50 dark:bg-slate-900/50 transition-colors duration-300">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold mb-4" id="section-title">{content.sectionTitle}</h2>
          <p class="text-xl text-slate-600 dark:text-slate-400" id="section-subtitle">{content.sectionSubtitle}</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8" id="capabilities-grid">
          {content.capabilities.map((capability) => (
            <div class="group relative bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-2xl p-8 hover:border-emerald-300 dark:hover:border-emerald-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-500/10">
              <div class={`w-14 h-14 bg-gradient-to-br ${capability.gradient} rounded-xl flex items-center justify-center mb-6 shadow-lg`}>
                <Icon name={capability.icon} class="w-7 h-7 text-white" />
              </div>
              <h3 class="text-2xl font-bold mb-3">{capability.title}</h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">{capability.description}</p>
            </div>
          ))}
        </div>

        <div class="mt-16 bg-gradient-to-r from-white via-slate-50 to-white dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 rounded-2xl p-12 border border-slate-200 dark:border-slate-700 transition-colors duration-300">
          <div class="grid md:grid-cols-3 gap-8">
            <div class="text-center">
              <Icon name="Network" class="w-12 h-12 text-emerald-600 dark:text-emerald-400 mx-auto mb-4" size={48} />
              <h3 class="text-lg font-semibold mb-2">Deployment Flexibility</h3>
              <p class="text-slate-600 dark:text-slate-400 text-sm">Local, API, and hybrid deployment options with seamless integration</p>
            </div>
            <div class="text-center">
              <Icon name="FileSearch" class="w-12 h-12 text-teal-600 dark:text-teal-400 mx-auto mb-4" size={48} />
              <h3 class="text-lg font-semibold mb-2">Document Intelligence</h3>
              <p class="text-slate-600 dark:text-slate-400 text-sm">Advanced analysis of internal and external documents in real-time</p>
            </div>
            <div class="text-center">
              <Icon name="Database" class="w-12 h-12 text-cyan-600 dark:text-cyan-400 mx-auto mb-4" size={48} />
              <h3 class="text-lg font-semibold mb-2">Data Processing</h3>
              <p class="text-slate-600 dark:text-slate-400 text-sm">Agentic systems for comprehensive data analysis and insights</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Consultation Services -->
    <section id="consultation" class="relative z-10 px-6 lg:px-12 py-20">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold mb-4">Consultation Services</h2>
          <p class="text-xl text-slate-600 dark:text-slate-400">Expert guidance for your AI journey</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          {consultationServices.map((service) => (
            <div class="group relative bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-2xl p-8 hover:border-emerald-300 dark:hover:border-emerald-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-500/10">
              <div class={`w-14 h-14 bg-gradient-to-br ${service.gradient} rounded-xl flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300`}>
                <Icon name={service.icon} class="w-7 h-7 text-white" />
              </div>
              <h3 class="text-2xl font-bold mb-3">{service.title}</h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">{service.description}</p>
            </div>
          ))}
        </div>

        <div class="bg-gradient-to-r from-emerald-600 to-teal-600 rounded-2xl p-12 text-white shadow-2xl">
          <div class="text-center max-w-3xl mx-auto">
            <h3 class="text-3xl font-bold mb-4">Ready to Get Started?</h3>
            <p class="text-lg mb-8 text-emerald-50">
              Schedule a free consultation to discuss your AI needs and explore how we can help transform your business.
            </p>
            <a
              href="mailto:contact@loquitor.ai"
              class="inline-block px-10 py-4 bg-white text-emerald-600 rounded-xl font-semibold hover:bg-emerald-50 transition-all shadow-xl">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Research Section -->
    <section id="research" class="relative z-10 px-6 lg:px-12 py-20 bg-slate-100/50 dark:bg-slate-900/50 transition-colors duration-300">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold mb-4">Research Collaborations</h2>
          <p class="text-xl text-slate-600 dark:text-slate-400">Advancing AI through theoretical statistics</p>
        </div>

        <div class="bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-2xl p-12 transition-colors duration-300">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <Icon name="BookOpen" class="w-12 h-12 text-emerald-600 dark:text-emerald-400 mb-6" size={48} />
              <h3 class="text-2xl font-bold mb-4">Institutional Partnerships</h3>
              <p class="text-slate-700 dark:text-slate-300 mb-6 leading-relaxed">
                We collaborate with various institutions on theoretical statistics research
                that contributes to advancing AI capabilities and understanding.
              </p>
              <ul class="space-y-3">
                <li class="flex items-center text-slate-600 dark:text-slate-400">
                  <Icon name="ChevronRight" class="w-5 h-5 text-emerald-600 dark:text-emerald-400 mr-2" />
                  Theoretical statistics research
                </li>
                <li class="flex items-center text-slate-600 dark:text-slate-400">
                  <Icon name="ChevronRight" class="w-5 h-5 text-emerald-600 dark:text-emerald-400 mr-2" />
                  AI model optimization studies
                </li>
                <li class="flex items-center text-slate-600 dark:text-slate-400">
                  <Icon name="ChevronRight" class="w-5 h-5 text-emerald-600 dark:text-emerald-400 mr-2" />
                  Applied research initiatives
                </li>
              </ul>
            </div>
            <div class="bg-slate-100 dark:bg-slate-800/50 rounded-xl p-6 sm:p-8 border border-slate-200 dark:border-slate-700 transition-colors duration-300">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="min-w-0 overflow-hidden bg-gradient-to-br from-emerald-600/10 to-teal-600/10 dark:from-emerald-600/20 dark:to-teal-600/20 rounded-lg p-4 sm:p-6 border border-emerald-300 dark:border-emerald-500/20 transition-colors duration-300">
                  <Icon name="FlaskConical" class="w-6 h-6 sm:w-8 sm:h-8 text-emerald-600 dark:text-emerald-400 mb-2" size={32} />
                  <div class="text-xl sm:text-2xl font-bold text-emerald-600 dark:text-emerald-400 break-words leading-snug">Research</div>
                  <div class="text-xs sm:text-sm text-slate-600 dark:text-slate-500 break-words">Active Projects</div>
                </div>

                <div class="min-w-0 overflow-hidden bg-gradient-to-br from-blue-600/10 to-cyan-600/10 dark:from-blue-600/20 dark:to-cyan-600/20 rounded-lg p-4 sm:p-6 border border-blue-300 dark:border-blue-500/20 transition-colors duration-300">
                  <Icon name="Brain" class="w-6 h-6 sm:w-8 sm:h-8 text-blue-600 dark:text-blue-400 mb-2" size={32} />
                  <div class="text-xl sm:text-2xl font-bold text-blue-600 dark:text-blue-400 break-words leading-snug">Theory</div>
                  <div class="text-xs sm:text-sm text-slate-600 dark:text-slate-500 break-words">Statistical Models</div>
                </div>

                <div class="min-w-0 overflow-hidden bg-gradient-to-br from-orange-600/10 to-amber-600/10 dark:from-orange-600/20 dark:to-amber-600/20 rounded-lg p-4 sm:p-6 border border-orange-300 dark:border-orange-500/20 transition-colors duration-300">
                  <Icon name="GitBranch" class="w-6 h-6 sm:w-8 sm:h-8 text-orange-600 dark:text-orange-400 mb-2" size={32} />
                  <div class="text-xl sm:text-2xl font-bold text-orange-600 dark:text-orange-400 break-words leading-snug">Applied</div>
                  <div class="text-xs sm:text-sm text-slate-600 dark:text-slate-500 break-words">Real Solutions</div>
                </div>

                <div class="min-w-0 overflow-hidden bg-gradient-to-br from-slate-600/10 to-zinc-600/10 dark:from-slate-600/20 dark:to-zinc-600/20 rounded-lg p-4 sm:p-6 border border-slate-300 dark:border-slate-500/20 transition-colors duration-300">
                  <Icon name="Globe" class="w-6 h-6 sm:w-8 sm:h-8 text-slate-600 dark:text-slate-400 mb-2" size={32} />
                  <div class="text-xl sm:text-2xl font-bold text-slate-600 dark:text-slate-400 break-words leading-snug">Impact</div>
                  <div class="text-xs sm:text-sm text-slate-600 dark:text-slate-500 break-words">Industry Wide</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Architecture Section -->
    <section id="architecture" class="relative z-10 px-6 lg:px-12 py-20">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold mb-4">Flexible Architecture</h2>
          <p class="text-xl text-slate-600 dark:text-slate-400">Deploy how you need, where you need</p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-xl p-6 hover:border-emerald-300 dark:hover:border-emerald-500/50 transition-all">
            <Icon name="Server" class="w-10 h-10 text-orange-600 dark:text-orange-400 mb-4" size={40} />
            <h3 class="text-lg font-semibold mb-2">Local Deployment</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm">On-premise solutions for maximum control and security</p>
          </div>
          <div class="bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-xl p-6 hover:border-emerald-300 dark:hover:border-emerald-500/50 transition-all">
            <Icon name="Globe" class="w-10 h-10 text-blue-600 dark:text-blue-400 mb-4" size={40} />
            <h3 class="text-lg font-semibold mb-2">API Integration</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm">Cloud-based API access for scalability and ease</p>
          </div>
          <div class="bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-xl p-6 hover:border-emerald-300 dark:hover:border-emerald-500/50 transition-all">
            <Icon name="Layers" class="w-10 h-10 text-emerald-600 dark:text-emerald-400 mb-4" size={40} />
            <h3 class="text-lg font-semibold mb-2">Hybrid Solutions</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm">Combine local and API models for optimal performance</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative z-10 px-6 lg:px-12 py-20 bg-slate-100/50 dark:bg-slate-900/50 transition-colors duration-300">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl lg:text-5xl font-bold mb-8">
          Ready to Build Your
          <br />
          <span class="bg-gradient-to-r from-emerald-600 to-teal-600 dark:from-emerald-400 dark:to-teal-400 bg-clip-text text-transparent">
            Custom AI Solution?
          </span>
        </h2>
        <p class="text-xl text-slate-600 dark:text-slate-400 mb-12">
          Let's discuss how Loquitor can transform your enterprise
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="mailto:contact@loquitor.ai"
            class="px-10 py-4 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-xl font-semibold hover:from-emerald-500 hover:to-teal-500 transition-all shadow-xl hover:shadow-emerald-500/25 text-white">
            Contact Us
          </a>
          <button
            data-scroll-to="capabilities"
            class="px-10 py-4 border border-slate-300 dark:border-slate-600 hover:border-slate-400 dark:hover:border-slate-500 rounded-xl font-semibold hover:bg-slate-100 dark:hover:bg-slate-800/50 transition-all backdrop-blur">
            Learn More
          </button>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="relative z-10 border-t border-slate-200 dark:border-slate-800 px-6 lg:px-12 py-8 mt-20 transition-colors duration-300">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center">
        <div class="flex items-center space-x-3 mb-4 md:mb-0">
          <span class="text-xl font-bold">Loquitor</span>
        </div>
        <div class="text-sm text-slate-500 flex items-center gap-4">
          <span>Â© 2025 Loquitor, LLC. All rights reserved.</span>
          <span class="text-slate-300 dark:text-slate-700">|</span>
          <a href="/terms" class="hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">Terms</a>
          <span class="text-slate-300 dark:text-slate-700">|</span>
          <a href="/privacy" class="hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">Privacy</a>
        </div>
      </div>
    </footer>
  </div>

  <script>
    import { getVibeContent } from '../config/vibeContent.js';

    // Feature carousel animation
    let activeFeatureIndex = 0;
    let featureCards = document.querySelectorAll('.feature-card');
    let carouselInterval;

    function cycleFeatures() {
      // Remove active class from all cards
      featureCards.forEach((card) => {
        card.classList.remove('active', 'bg-slate-100', 'dark:bg-slate-800/50', 'border', 'border-emerald-300', 'dark:border-emerald-500/30', 'shadow-lg');
        card.classList.add('opacity-60');
        const chevron = card.querySelector('.chevron');
        if (chevron) chevron.classList.add('hidden');
      });

      // Add active class to current card
      const activeCard = featureCards[activeFeatureIndex];
      if (activeCard) {
        activeCard.classList.add('active', 'bg-slate-100', 'dark:bg-slate-800/50', 'border', 'border-emerald-300', 'dark:border-emerald-500/30', 'shadow-lg');
        activeCard.classList.remove('opacity-60');
        const chevron = activeCard.querySelector('.chevron');
        if (chevron) chevron.classList.remove('hidden');
      }

      // Move to next feature
      activeFeatureIndex = (activeFeatureIndex + 1) % featureCards.length;
    }

    function startCarousel() {
      if (carouselInterval) clearInterval(carouselInterval);
      carouselInterval = setInterval(cycleFeatures, 4000);
    }

    // Start the carousel
    startCarousel();

    // Smooth scrolling for all scroll-to buttons
    document.querySelectorAll('[data-scroll-to]').forEach((button) => {
      button.addEventListener('click', (e) => {
        const targetId = button.getAttribute('data-scroll-to');
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });

    // Listen for vibe changes
    window.addEventListener('vibechange', (event) => {
      const vibeId = event.detail.vibe;
      const content = getVibeContent(vibeId);

      // Update hero section
      document.getElementById('hero-badge-text').textContent = content.hero.badge.text;
      document.getElementById('hero-title-line1').textContent = content.hero.title.line1;
      document.getElementById('hero-title-line2').textContent = content.hero.title.line2;
      document.getElementById('hero-subtitle').textContent = content.hero.subtitle;
      document.getElementById('hero-primary-cta').textContent = content.hero.primaryCTA;
      document.getElementById('hero-secondary-cta').textContent = content.hero.secondaryCTA;

      // Update section titles
      document.getElementById('section-title').textContent = content.sectionTitle;
      document.getElementById('section-subtitle').textContent = content.sectionSubtitle;

      // Update hero capabilities (feature cards)
      const heroCapabilitiesContainer = document.getElementById('hero-capabilities');
      heroCapabilitiesContainer.innerHTML = content.capabilities.map((cap, index) => `
        <div
          data-feature-index="${index}"
          class="feature-card flex items-center space-x-4 p-4 rounded-lg transition-all duration-500 ${
            index === 0 ? 'active bg-slate-100 dark:bg-slate-800/50 border border-emerald-300 dark:border-emerald-500/30 shadow-lg' : 'opacity-60'
          }"
        >
          <div class="w-10 h-10 bg-gradient-to-br ${cap.gradient} rounded-lg flex items-center justify-center">
            <span class="iconify w-5 h-5 text-white" data-icon="lucide:${cap.icon.toLowerCase().replace(/([A-Z])/g, '-$1').slice(1)}" data-width="20" data-height="20"></span>
          </div>
          <div class="flex-1">
            <h3 class="font-semibold text-sm">${cap.title}</h3>
          </div>
          <span class="chevron iconify w-5 h-5 text-emerald-600 dark:text-emerald-400 ${index === 0 ? '' : 'hidden'}" data-icon="lucide:chevron-right" data-width="20" data-height="20"></span>
        </div>
      `).join('');

      // Update capabilities grid
      const capabilitiesGrid = document.getElementById('capabilities-grid');
      capabilitiesGrid.innerHTML = content.capabilities.map((capability) => `
        <div class="group relative bg-white/80 dark:bg-slate-900/80 backdrop-blur border border-slate-200 dark:border-slate-700 rounded-2xl p-8 hover:border-emerald-300 dark:hover:border-emerald-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-500/10">
          <div class="w-14 h-14 bg-gradient-to-br ${capability.gradient} rounded-xl flex items-center justify-center mb-6 shadow-lg">
            <span class="iconify w-7 h-7 text-white" data-icon="lucide:${capability.icon.toLowerCase().replace(/([A-Z])/g, '-$1').slice(1)}" data-width="28" data-height="28"></span>
          </div>
          <h3 class="text-2xl font-bold mb-3">${capability.title}</h3>
          <p class="text-slate-600 dark:text-slate-400 leading-relaxed">${capability.description}</p>
        </div>
      `).join('');

      // Reinitialize feature cards and carousel
      featureCards = document.querySelectorAll('.feature-card');
      activeFeatureIndex = 0;
      startCarousel();

      // Reload iconify icons
      if (window.Iconify) {
        window.Iconify.scan();
      }
    });

    // Initialize with saved vibe on page load
    const savedVibe = localStorage.getItem('loquitor-vibe');
    if (savedVibe && savedVibe !== 'professional') {
      window.dispatchEvent(new CustomEvent('vibechange', { detail: { vibe: savedVibe } }));
    }
  </script>
</BaseLayout>
